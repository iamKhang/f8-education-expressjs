<div class="mt4">
  <h3>ĐĂNG KHÓA HỌC</h3>
  <form method="post" action="/courses/store">
    <div class="form-group">
      <label for="name">Tên khóa học</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
      />

    </div>

    <div class="form-group">
      <label for="description">Mô tả khóa học</label>
      <input
        type="text"
        class="form-control"
        id="description"
        name="description"
      />

    </div>

    <div class="form-group">
      <label for="videoId">Video ID</label>
      <input
        type="text"
        class="form-control"
        id="videoId"
        name="videoId"
      />

    </div>

    <div class="form-group">
      <label for="level">Trình độ</label>
      <input
        type="text"
        class="form-control"
        id="level"
        name="level"
      />

    </div>

    <button type="submit" class="btn btn-primary">Thêm khóa học</button>
  </form>
</div>